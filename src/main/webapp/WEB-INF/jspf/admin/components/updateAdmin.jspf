<%-- any content can be specified here e.g.: --%>
<%@ page pageEncoding="UTF-8" %>
<div class="modal" tabindex="-1" id="update-admin-modal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <form class="update-admin-form" method="POST" action="/admin">
        <div class="modal-header">
          <h5 class="modal-title">Cập nhật Tài khoản Admin</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body px-5">
          <!-- Hidden - User Account ID -->
          <input type="hidden" id="txtAccountID" name="txtAccountID" value=""/>
          <div class="mb-3">
            <label for="txtAdminUsername" class="form-label">Tên Tài khoản Người dùng</label>
            <input type="text" class="form-control" id="txtAdminUsername" name="txtAdminUsername" value="">
          </div>
          <div class="mb-3">
            <label for="txtEmail" class="form-label">Email</label>
            <input type="email" class="form-control" id="txtEmail" name="txtEmail" value="">
          </div>
          <div class="mb-3">
            <label for="txtAdminPassword" class="form-label">Mật khẩu mới</label>
            <input type="password" class="form-control" id="txtUpdateAdminPassword" name="txtAdminPassword">
          </div>
          <div class="mb-3">
            <label for="txtAdminRePassword" class="form-label">Nhập lại Mật khẩu mới</label>
            <input type="password" class="form-control" id="txtAdminRePassword" name="txtAdminRePassword">
          </div>
        </div>
        <div class="modal-footer">
          <!-- Submit Button -->
          <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Hủy</button>
          <button type="submit" class="btn btn-success" onclick="validateForm()">Cập nhật</button>
          <!-- Hidden Submit Value -->
          <input type="hidden" id="btnSubmit" name="btnSubmit" value="SubmitUpdateAdmin">
        </div>
      </form>
    </div>
  </div>
</div>
