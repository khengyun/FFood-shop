        <item name="colorSurfaceContainerHighest">@color/md_theme_surfaceContainerHighest</item>

        <item name="buttonStyle">@style/Widget.FFoodAndroid.Button</item>
        <item name="textAppearanceButton">@style/TextAppearance.FFoodAndroid.Button</item>

        <item name="textAppearanceDisplayLarge">@style/TextAppearance.FFoodAndroid.DisplayLarge</item>
        <item name="textAppearanceDisplayMedium">@style/TextAppearance.FFoodAndroid.DisplayMedium</item>
        <item name="textAppearanceDisplaySmall">@style/TextAppearance.FFoodAndroid.DisplaySmall</item>
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.FFoodAndroid.HeadlineLarge</item>
